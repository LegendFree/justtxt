package javapract;
import java.util.*;
/**
 *
 * @author SAHU
 */
public class reversenum {
    public static void main(String[] args){
    Scanner sc=new Scanner(System.in);
    int num;
    System.out.println("Enter a number:");
    num =sc.nextInt();
    int reverse=0;
    while(num!=0){
        int digit=num%10;
        reverse=reverse*10+digit;
        num=num/10;
    }
    System.out.println("Reverse of number is :"+reverse);
            }
}
